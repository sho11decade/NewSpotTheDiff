# Flask Environment
FLASK_ENV=development  # Use 'production' for production deployment

# Security
SECRET_KEY=your-secret-key-change-this-in-production

# Site Configuration
SITE_DOMAIN=localhost:5000  # Change to your domain in production (e.g., spotthediff.ricezero.fun)

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=  # Add your GA4 measurement ID (e.g., G-XXXXXXXXXX)

# Security Headers (Production only)
FORCE_HTTPS=false  # Set to 'true' in production

# Rate Limiting (Optional)
RATELIMIT_STORAGE_URI=memory://  # Use redis://your-redis-url for production with Redis
